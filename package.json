{
  "name": "garthpuckerin-resume",
  "version": "1.1.0",
  "private": true,
  "description": "Professional resume and portfolio site for Garth Puckerin",
  "scripts": {
    "dev": "next dev -p 3300",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "npx serve api-docs",
    "prepare": "husky",
    "commit": "cz",
    "security:audit": "npm audit",
    "security:check": "npm audit"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "overrides": {
    "lodash": ">=4.17.22",
    "tmp": ">=0.2.4",
    "esbuild": ">=0.24.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^15.1.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "swagger-ui-react": "^5.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/cz-commitlint": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/swagger-ui-react": "^4.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  }
}
